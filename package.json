{
  "name": "http-semantics",
  "module": "index.ts",
  "version": "1.0.0",
  "description": "HTTP Exceptions classes and HTTP Status enums based on RFC 9110 (HTTP Semantics)",
  "type": "module",
  "author": "Miguel Araujo",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "biome": "biome check --write",
    "biome:ci": "biome ci",
    "preversion": "bun run lint",
    "prepublishOnly": "bun biome:ci && bun run build",
    "postversion": "git push --follow-tags",
    "prebuild": "rimraf dist && tsc --noEmit "
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "latest",
    "rimraf": "^6.1.2",
    "tsdown": "^0.18.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
