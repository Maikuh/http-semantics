{
  "name": "http-semantics",
  "module": "index.ts",
  "version": "1.0.0",
  "description": "HTTP Exceptions classes and HTTP Status enums based on RFC 9110, RFC 9457 and RFC 6585.",
  "type": "module",
  "author": "Miguel Araujo",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "biome": "biome check --write",
    "biome:ci": "biome ci",
    "preversion": "bun run lint",
    "prepublishOnly": "bun biome:ci && bun run build",
    "postversion": "git push --follow-tags"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "tsdown": "^0.18.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
